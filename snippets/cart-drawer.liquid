<script>
  // Simple cart drawer visibility manager - no observers to prevent performance issues
  window.updateCartDrawerVisibility = function () {
    const cartDrawer = document.querySelector('cart-drawer');
    if (!cartDrawer) return;

    const cartItems = cartDrawer.querySelectorAll('.cart-item');
    const emptyDiv = cartDrawer.querySelector('.drawer__inner-empty');
    const checkoutButton = cartDrawer.querySelector('#CartDrawer-Checkout');

    if (cartItems.length > 0) {
      // Has items - hide empty state and enable checkout
      cartDrawer.classList.remove('is-empty');
      if (emptyDiv) {
        emptyDiv.classList.add('hidden-by-js');
      }
      if (checkoutButton) {
        checkoutButton.removeAttribute('disabled');
      }
    } else {
      // No items - show empty state and disable checkout
      cartDrawer.classList.add('is-empty');
      if (emptyDiv) {
        emptyDiv.classList.remove('hidden-by-js');
      }
      if (checkoutButton) {
        checkoutButton.setAttribute('disabled', '');
      }
    }
  };

  //coupen code in sidebar cart drawer
  function copyCouponCode(code) {
    const el = document.createElement('textarea');
    el.value = code;
    document.body.appendChild(el);
    el.select();
    document.execCommand('copy');
    document.body.removeChild(el);
    alert(`Coupon code "${code}" copied to clipboard!`); // You can replace this with a more subtle notification
  }
</script>
