<style>
  .image-content-feature-block {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr; /* Image (1fr) on left, content (2fr) on right */
    gap: 100px;
    padding: 50px;
    align-items:center;
  }

  @media (max-width: 1023px) {
    .image-content-feature-block {
      grid-template-columns: 1fr; /* Stack on smaller screens */
      gap: 40px;
    }
  }

  .feature-image-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .feature-content-wrapper {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .feature-main-heading {
    font-size: 2.75rem;
    font-weight: bold;
    margin-bottom: 0;
    color: black;
  }

  .feature-subtitle {
    color: #718096;
    margin-top: 0;
    font-size: 12px;
  }

  .feature-action-button {
    display: inline-block;
    background-color: #3b82f6;
    color: white;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
    width: fit-content;
  }

  .feature-action-button:hover {
    background-color: #2563eb;
  }

  .feature-points-container {
    display: flex;
    flex-direction: column;   
    margin-top: 24px;
  }

  

  .feature-point-heading {
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 0;
    margin-bottom: 8px;
  }

  .feature-point-description {
    color: #4a5568;
    margin-top: 0;
    margin-bottom: 8px;
    font-size: 12px;
  }

  .feature-point-description p{
    margin:0;
  }
  .feature-point-link {
    display: inline-block;
    margin-top: 8px;
    color: #3b82f6;
    text-decoration: none;
  }

  .feature-point-link:hover {
    text-decoration: underline;
  }

  .feature-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 20px;
  }

  .feature-image-placeholder {
    background-color: #f3f4f6;
    border-radius: 4px;
    aspect-ratio: 16 / 9;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #a0aec0;
    text-align: center;
    width: 100%;
  }
</style>

<div class="image-content-feature-block">
  <div class="feature-image-container">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: 'large' }}" alt="{{ section.settings.image.alt | default: section.settings.heading }}" class="feature-image">
    {% else %}
      <div class="feature-image-placeholder">
        <span>No image selected</span>
      </div>
    {% endif %}
  </div>

  <div class="feature-content-wrapper">
    {% if section.settings.heading != blank %}
      <h2 class="feature-main-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="feature-subtitle">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="feature-points-container">
      {% for block in section.blocks %}
        <div class="feature-point-item">
          {% if block.settings.card_title != blank %}
            <h3 class="feature-point-heading">{{ block.settings.card_title }}</h3>
          {% endif %}
          {% if block.settings.card_content != blank %}
            <div class="feature-point-description">{{ block.settings.card_content }}</div>
          {% endif %}
          {% if block.settings.card_button_label != blank and block.settings.card_button_link != blank %}
            <a href="{{ block.settings.card_button_link }}" class="feature-point-link">{{ block.settings.card_button_label }}</a>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="feature-action-button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Image Left & Content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "feature_point",
      "name": "Feature Point",
      "settings": [
        {
          "type": "text",
          "id": "card_title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "card_content",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "card_button_label",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "card_button_link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Left & Feature Points",
      "blocks": [
        { "type": "feature_point" },
        { "type": "feature_point" },
        { "type": "feature_point" }
      ]
    }
  ]
}
{% endschema %}