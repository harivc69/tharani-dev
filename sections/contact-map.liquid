    {% schema %}
{
  "name": "Contact Map",
  "settings": [
    {
      "type": "textarea",
      "id": "custom_map_iframe",
      "label": "Custom Map Iframe",
      "info": "Paste your map iframe code here. If empty, the default map will be shown."
    }
  ]
}
{% endschema %}

<div class="contact-map-wrapper">
  <div class="contact-map-container">
    {% if section.settings.custom_map_iframe != blank %}
      {{ section.settings.custom_map_iframe }}
    {% else %}
      <iframe 
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.159431652648!2d144.96305791531638!3d-37.814107979751894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf57779b4f4a7f4b8!2sMelbourne%20VIC%2C%20Australia!5e0!3m2!1sen!2sin!4v1629780102345!5m2!1sen!2sin" 
        width="100%" 
        height="450" 
        style="border:0;" 
        allowfullscreen="" 
        loading="lazy">
      </iframe>
    {% endif %}
  </div>
</div>

<style>
.contact-map-wrapper {
  display: flex;
  justify-content: center;
  padding: 20px;
}

.contact-map-container {
  max-width: 1000px;
  width: 100%;
}

.contact-map-container iframe {
  width: 100%;
  height: 450px;
  border: 0;
}
</style>
