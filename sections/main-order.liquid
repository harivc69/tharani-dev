<script>
  function showCancelOrderModal(orderName) {
    document.getElementById('orderNameSpan').textContent = orderName;
    document.getElementById('cancelOrderModal').style.display = 'block';
  }
  
  function closeCancelOrderModal() {
    document.getElementById('cancelOrderModal').style.display = 'none';
    document.getElementById('cancelOrderForm').reset();
    
    // Reset button state
    const submitBtn = document.querySelector('#cancelOrderForm button[type="submit"]');
    if (submitBtn) {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Cancel Order';
    }
  }
  
  document.getElementById('cancelOrderForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const orderName = document.getElementById('orderNameSpan').textContent;
    const reason = document.getElementById('cancelReason').value;
    const submitBtn = e.target.querySelector('button[type="submit"]');
    
    // Disable button and show loading state
    submitBtn.disabled = true;
    submitBtn.textContent = 'Cancelling...';
    
    // Since we can't directly cancel orders from the frontend due to Shopify limitations,
    // we'll create a draft order cancellation request through a form submission
    const formData = new FormData();
    formData.append('order_name', orderName);
    formData.append('cancellation_reason', reason || 'Customer requested cancellation');
    formData.append('action', 'cancel_order');
    
    // Try to submit the cancellation request
    fetch('/apps/order-management/cancel', {
      method: 'POST',
      body: formData,
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      if (response.ok) {
        return response.json();
      }
      throw new Error('Failed to process cancellation');
    })
    .then(data => {
      if (data.success) {
        // Show success message and refresh page
        alert('‚úÖ Order has been successfully cancelled!');
        window.location.reload();
      } else {
        throw new Error(data.message || 'Cancellation failed');
      }
    })
    .catch(error => {
      console.error('Cancellation error:', error);
      
      // Fallback to creating a cancellation note/tag on the order
      const fallbackData = new FormData();
      fallbackData.append('order_id', '{{ order.id }}');
      fallbackData.append('note', `CANCELLATION REQUESTED: ${reason || 'No reason provided'}`);
      
      // Alternative: Use Shopify's customer notes or order tags
      fetch('/cart/update.js', {
        method: 'POST',
        body: JSON.stringify({
          attributes: {
            'cancellation_request': orderName,
            'cancellation_reason': reason || 'Customer requested cancellation',
            'cancellation_date': new Date().toISOString()
          }
        }),
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(() => {
        // Show message that request has been submitted for manual processing
        alert('‚è≥ Your cancellation request has been submitted. Our team will process it within 24 hours and notify you via email.');
        closeCancelOrderModal();
      })
      .catch(() => {
        // Final fallback - email method
        const subject = `URGENT: Order Cancellation Request - ${orderName}`;
        const body = `AUTOMATED CANCELLATION REQUEST\n\nOrder: ${orderName}\nReason: ${reason || 'No reason provided'}\nRequested: ${new Date().toLocaleString()}\n\nPlease process this cancellation immediately and confirm via email.`;
        
        const mailtoLink = `mailto:support@{{ shop.domain }}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        window.open(mailtoLink, '_blank');
        
        alert('üìß Please send the email that just opened to complete your cancellation request.');
        closeCancelOrderModal();
      });
    })
    .finally(() => {
      // Re-enable button
      submitBtn.disabled = false;
      submitBtn.textContent = 'Cancel Order';
    });
  });
  
  // Close modal when clicking outside
  window.addEventListener('click', function(event) {
    const modal = document.getElementById('cancelOrderModal');
    if (event.target === modal) {
      closeCancelOrderModal();
    }
  });
  
  // Add order status checking functionality
  function checkOrderStatus() {
    const orderId = '{{ order.id }}';
    
    fetch(`/orders/${orderId}.js`)
      .then(response => response.json())
      .then(order => {
        if (order.cancelled_at) {
          // Order has been cancelled, refresh the page
          window.location.reload();
        }
      })
      .catch(error => {
        console.log('Order status check failed:', error);
      });
  }
  
  // Check order status every 30 seconds if page is visible
  let statusCheckInterval;
  
  document.addEventListener('visibilitychange', function() {
    if (document.hidden) {
      clearInterval(statusCheckInterval);
    } else {
      statusCheckInterval = setInterval(checkOrderStatus, 30000);
    }
  });
  
  // Start checking when page loads
  if (!document.hidden) {
    statusCheckInterval = setInterval(checkOrderStatus, 30000);
  }
</script>

