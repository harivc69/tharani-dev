<!-- sections/features-section.liquid -->
<div style="background: #fbece7; padding: 60px 20px;">
  <div style="text-align: center; margin-bottom: 40px;">
    <h2 style="font-size: 36px; font-weight: bold; color: #3b1412; margin-bottom:0px;">Our Features</h2>
    <div style="width: 60px; height: 3px; background-color: #3b1412; margin: 10px auto 0;">&nbsp</div>
  </div>

  <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 4px; max-width: 1200px; margin: 0 auto;">
    {% for block in section.blocks %}
      <div style="display: flex; align-items: center; max-width: 400px; gap: 15px;">
        {% if block.settings.icon != blank %}
          <img src="{{ block.settings.icon | image_url: width: 60 }}" alt="icon" style=" width: 50px; height: 50px;" loading="lazy" />
        {% endif %}
        <div>
          <h3 style="font-size: 18px; font-weight: 600; margin-bottom: 6px; color: #3b1412;">{{ block.settings.heading }}</h3>
          <p style="font-size: 14px; color: #3b1412;">{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Features Section",
  "tag": "section",
  "class": "features-section",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Feature description text goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "heading": "Multiple payment gateways",
            "text": "Experience a streamlined and frictionless payment journey from our variety of integrated payment methods."
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Instant support and easy refund",
            "text": "Get 24/7 support and an easy refund policy on valid products."
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Safe doorstep delivery",
            "text": "Get all your products delivered safely to your doorstep."
          }
        },
        {
          "type": "feature",
          "settings": {
            "heading": "Transparent and traceable",
            "text": "Trace the journey of your fresh order from farm to your home, anytime and anywhere."
          }
        }
      ]
    }
  ]
}
{% endschema %}
