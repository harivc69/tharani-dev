<div class="cu-service-two-grids">
  <div class="section-inner">
    {% if section.settings.title != blank %}
      <h2 class="section-title2">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="section-description">{{ section.settings.description }}</p>
    {% endif %}

    <div class="second-agent-grid">
      {% for i in (1..section.settings.grid_two_count) %}
        {% assign block_index = section.settings.grid_one_count | plus: forloop.index0 %}
        {% if section.blocks.size > block_index %}
          {% assign block = section.blocks[block_index] %}
          {% if block.type == 'agent_feature' %}
            <div class="agent-item-grid-two">
              {% if block.settings.image != blank %}
                <div class="agent-image-container-two">
                  {{ block.settings.image | image_url: width: 150, height: 150 | image_tag: class: 'agent-image-two' }}
                </div>
              {% endif %}
              {% if block.settings.icon_svg != blank %}
                <div class="feature-icon-two">
                  {{ block.settings.icon_svg }}
                </div>
              {% endif %}
              {% if block.settings.feature_text_line1 != blank %}
                <p class="feature-text-two">{{ block.settings.feature_text_line1 }}</p>
              {% endif %}
              {% if block.settings.feature_text_line2 != blank %}
                <p class="feature-text-two">{{ block.settings.feature_text_line2 }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    <div class="first-agent-grid">
      {% for i in (1..section.settings.grid_one_count) %}
        {% assign block = section.blocks[forloop.index0] %}
        {% if block.type == 'agent_feature' %}
          <div class="agent-item-grid-one">
            {% if block.settings.image != blank %}
              <div class="agent-image-container-one">
                {{ block.settings.image | image_url: width: 100, height: 100 | image_tag: class: 'agent-image-one' }}
              </div>
            {% endif %}
            {% if block.settings.icon_svg != blank %}
              <div class="feature-icon-one">
                {{ block.settings.icon_svg }}
              </div>
            {% endif %}
            {% if block.settings.feature_text_line1 != blank %}
              <p class="feature-text-one">{{ block.settings.feature_text_line1 }}</p>
            {% endif %}
            {% if block.settings.feature_text_line2 != blank %}
              <p class="feature-text-one">{{ block.settings.feature_text_line2 }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
  </div>
</div>

{% schema %}
{
  "name": "Cu-Service",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Customer Service Highlights"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore our dedicated customer service features."
    },
    {
      "type": "range",
      "id": "grid_one_count",
      "label": "Number of Items in First Grid",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2,
      "info": "Set the number of agent blocks to display in the first grid."
    },
    {
      "type": "range",
      "id": "grid_two_count",
      "label": "Number of Items in Second Grid",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 2,
      "info": "Set the number of agent blocks to display in the second grid."
    }
  ],
  "blocks": [
    {
      "type": "agent_feature",
      "name": "Agent Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Agent Image"
        },
        {
          "type": "textarea",
          "id": "icon_svg",
          "label": "Feature Icon (SVG Code)",
          "info": "Paste the SVG code for the icon here."
        },
        {
          "type": "text",
          "id": "feature_text_line1",
          "label": "Feature Text Line 1"
        },
        {
          "type": "text",
          "id": "feature_text_line2",
          "label": "Feature Text Line 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Customer Service - Two Custom Grids",
      "category": "custom",
      "blocks": [
        { "type": "agent_feature", "settings": { "feature_text_line1": "Feature 1A", "feature_text_line2": "Text 1A" } },
        { "type": "agent_feature", "settings": { "feature_text_line1": "Feature 1B", "feature_text_line2": "Text 1B" } },
        { "type": "agent_feature", "settings": { "feature_text_line1": "Feature 2A", "feature_text_line2": "Text 2A" } },
        { "type": "agent_feature", "settings": { "feature_text_line1": "Feature 2B", "feature_text_line2": "Text 2B" } }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}

  .cu-service-two-grids {
    padding: 40px 20px;
    text-align: center;
    background-color: #f9f9f9; /* Optional background color */
  }

  .section-inner {
    max-width: 800px; /* Adjust as needed */
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .section-title2 {
    font-size:18px;   
    display: flex;  
    justify-content: center;
  }

  .section-description {
    color: #555;   
    display: flex;
    justify-content: center;
    align-items:center;
    font-size:10px;
      margin:0px auto;
    max-width:400px;
  }

  .first-agent-grid {
    display: flex;
    justify-content: center;
    gap: 18px; /* Adjust spacing for the first grid */
    flex-wrap: wrap;
    margin-bottom: 40px; /* Spacing between the two grids */
   
  }

  .second-agent-grid {
    display: flex;
    justify-content: center;
    gap: 60px; /* Adjust spacing for the second grid */
    flex-wrap: wrap;
  }

  .agent-item-grid-one,
  .agent-item-grid-two {
    text-align: center;
  }

  .agent-image-container-one {
    width: 100px; /* Different image size for the first grid */
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
  }

  .agent-image-one {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .feature-icon-one {
    margin-bottom: 10px;
    font-size: 0;
  }

  .feature-icon-one svg {
    width: 30px; /* Different icon size for the first grid */
    height: 30px;
    fill: none;
    stroke: #007bff; /* Different icon color for the first grid */
    stroke-width: 1.5;
    stroke-linecap: round;
    stroke-linejoin: round;
    display: block;
    margin: 0 auto 5px;
  }

  .feature-text-one {
    color: #333; /* Different text color for the first grid */
    font-size: 12px;
    margin: 0px;
    max-width:150px;
  }

  .agent-image-container-two {
    width: 150px; /* Different image size for the second grid */
    height: 150px;
    border-radius: 100%; /* Different image style for the second grid */
    overflow: hidden;
    margin-bottom: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: auto;
    margin-right: auto;
  }

  .agent-image-two {
    width: 100px;
    height: 100px;
    object-fit: cover;
  }

  .feature-icon-two {
    margin-bottom: 10px;
    font-size: 0;
  }

  .feature-icon-two svg {
    width: 30px; /* Different icon size for the second grid */
    height: 30px;
    fill: none;
    stroke: #28a745; /* Different icon color for the second grid */
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
    display: block;
    margin: 0 auto 5px;
  }

  .feature-text-two {
    color: #555; /* Different text color for the second grid */
    font-size: 16px;
    margin-bottom: 5px;
  }
{% endstylesheet %}

