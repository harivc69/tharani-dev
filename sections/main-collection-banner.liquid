{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{{ 'component-collection-hero.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .collection-usp {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 0;
    background-color:#f3f4f6;
    padding-top:10px;
  }

  .icons-div {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }

  .icons-div img {
    height: 40px;
    width: 40px;
    border: 1px solid;
    border-radius: 50%;
    padding: 3px;
  }

  .icons-div p {
    margin: 5px 0px;
    font-size: 12px;
  }

  #clear-filters {
    text-align: center;
    margin-top: 20px;
    display: none;
  }

  .clear-button {
    padding: 4px 20px;
    background-color: #59230a;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    display: inline-block;
  } 

  .video-circle {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.video-circle video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
{%- endstyle -%}

<!-- ICON FILTER SECTION -->
<div class="collection-usp">
  {% for block in section.blocks %}
    {% if block.type == 'icon' %}
      {% assign tag = block.settings.icon_label | strip | handleize %}
      {% assign url = block.settings.icon_url | default: "/collections/all/{{ tag }}" %}
      <a href="{{ url }}" class="icons-div">
        {% if block.settings.icon_image %}
          <img src="{{ block.settings.icon_image | image_url }}" alt="{{ block.settings.icon_label }}">
        {% endif %}
        <p>{{ block.settings.icon_label }}</p>
      </a>
    {% endif %}
  {% endfor %}
</div>

<!-- CLEAR FILTER BUTTON -->
<div id="clear-filters">
  <a href="/collections/all" class="clear-button">Clear Filters</a>
</div>

<!-- COLLECTION DESCRIPTION + IMAGE -->
<div class="collection-hero{% if section.settings.show_collection_image and collection.image %} collection-hero--with-image{% endif %} color-{{ section.settings.color_scheme }} gradient">
  <div class="collection-hero__inner page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <div class="collection-hero__text-wrapper">
      {%- if section.settings.show_collection_description -%}
        <div class="collection-hero__description rte">{{ collection.description }}</div>
      {%- endif -%}
    </div>

    {%- if section.settings.show_collection_image and collection.image -%}
      <div class="collection-hero__image-container media gradient">
        <img
          src="{{ collection.image | image_url: width: 750 }}"
          alt="{{ collection.image.alt | escape }}"
          width="{{ collection.image.width }}"
          height="{{ collection.image.height }}"
        >
      </div>
    {%- endif -%}
  </div>
</div>

<!-- VIDEO SECTION -->
<div class="video-section page-width" style="display: flex; gap: 20px; flex-wrap: wrap; justify-content: center; margin-top:10px;">
  {% for block in section.blocks %}
    {% if block.type == 'video' and block.settings.video != blank %}
      <div class="video-item" style="text-align: center;">
        <div class="video-circle">
          {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
        </div>
        <p style="margin-top: 8px; font-size: 12px;">{{ block.settings.video_title }}</p>
      </div>
    {% endif %}
  {% endfor %}
</div>

<!-- JS FOR CLEAR FILTER VISIBILITY -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const currentUrl = window.location.pathname;
    const regex = /^\/collections\/all\/[^\/]+$/;

    if (regex.test(currentUrl)) {
      const clearFilters = document.getElementById('clear-filters');
      clearFilters.style.display = 'flex';
      clearFilters.style.maxWidth = '1100px';
      clearFilters.style.margin = '20px auto';
     
    }
  });
</script> 

{% schema %}
{
  "name": "BannerIcons + Videos",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "default": true,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "default": false,
      "label": "Show collection image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "icon_label",
          "label": "Icon Label",
          "default": "Label"
        },
        {
          "type": "url",
          "id": "icon_url",
          "label": "Icon URL (optional)"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video Block",
      "settings": [
        {
          "type": "text",
          "id": "video_title",
          "label": "Video Title"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Upload Video"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Collection Icons & Videos",
      "blocks": [
        {
          "type": "icon",
          "settings": {
            "icon_label": "New"
          }
        },
        {
          "type": "icon",
          "settings": {
            "icon_label": "Deals"
          }
        },
        {
          "type": "video",
          "settings": {
            "video_title": "Promo Video"
          }
        }
      ]
    }
  ]
}
{% endschema %}
