{% schema %}
{
  "name": "Image Slider",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Minimal Processing, Maximum Nutrition"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Subtext",
          "default": "Our farmers work twice as hard as we do in order to deliver the best to you."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "About More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Image Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="custom-slider-wrapper">
  <div class="custom-slider" id="custom-slider-{{ section.id }}">
    {% for block in section.blocks %}
      <div class="slide">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: '1600x' }}" alt="Slide Image">
        {% endif %}
        <div class="overlay-content">
          <div class="text-area">
            {% if block.settings.heading != blank %}
              <h2 class="overlay-title">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.subtext != blank %}
              <p>{{ block.settings.subtext }}</p>
            {% endif %}
            {% if block.settings.button_text != blank and block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="btn">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .overlay-title{
    color:white;
  }
.custom-slider-wrapper {
  overflow: hidden;
}
.custom-slider {
  display: flex;
  overflow-x: scroll;
  scroll-snap-type: x mandatory;
  scroll-behavior: smooth;
  -ms-overflow-style: none;  /* IE/Edge */
  scrollbar-width: none;     /* Firefox */
}

.custom-slider::-webkit-scrollbar {
  display: none; /* Chrome, Safari */
}

.custom-slider .slide {
  flex: 0 0 100%;
  scroll-snap-align: start;
  position: relative;
}
.custom-slider img {
  width: 100%;
  height: auto;
  display: block;
}

/* Right Overlay Styling */
.overlay-content {
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 20px;
}


.text-area {
  max-width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  gap: 15px;
}

.text-area h2 {
  font-size: 2.2rem;
  margin: 0;
  font-weight: 700;
  font-family: inherit;
  line-height: 1.2;
  letter-spacing: -0.02em;
}

.text-area p {
  font-size: 1.1rem;
  margin: 0;
  line-height: 1.5;
  opacity: 0.95;
}

.btn {
  display: inline-block;
  background: #d9cc8b;
  color: #000;
  padding: 12px 28px;
  text-decoration: none;
  border-radius: 30px;
  font-weight: 600;
  font-size: 1rem;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(217, 204, 139, 0.3);
}

.btn:hover {
  background: #c6b76e;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(217, 204, 139, 0.4);
}

/* Mobile Styles */
@media (max-width: 768px) {
  {% comment %} .slider {
    height: 500px;
  } {% endcomment %}
  
  .overlay-content {
    width: 100%;
    left: 0;
    position: relative;
    bottom: 0;
    background: rgba(0, 0, 0, 0.85);
    padding: 30px 20px;
    text-align: center;
  }
  
  .slide img {
    height: 350px;
    object-fit: cover;
  }
  
  .text-area {
    gap: 20px;
  }
  
  .text-area h2 {
    font-size: 1.8rem;
    line-height: 1.3;
  }
  
  .text-area p {
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .btn {
    padding: 14px 32px;
    font-size: 1.1rem;
  }
}

/* Tablet Styles */
@media (max-width: 1024px) and (min-width: 769px) {
  .text-area h2 {
    font-size: 2rem;
  }
  
  .text-area p {
    font-size: 1.05rem;
  }
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const slider = document.getElementById("custom-slider-{{ section.id }}");
    if (!slider) return;

    const slides = slider.children;
    let index = 0;

    setInterval(() => {
      index = (index + 1) % slides.length;
      slider.scrollTo({
        left: slides[index].offsetLeft,
        behavior: 'smooth'
      });
    }, 3000);
  });
</script>
