  .form-container, .content-container {   
    max-width: 100% !important;
}
    .inner-container {    
    display: grid !important;
    grid-template-columns: 1fr !important;
}
    .form-section{
      margin:10px;
    }
    .contact-custom-wrapper{
    padding:0px !important;
  }
}

@media (max-width: 480px) {
   .form-container, .content-container {   
